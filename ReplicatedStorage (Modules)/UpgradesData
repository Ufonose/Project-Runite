		end,
		ApplyEffect = function(level)
			return 1 + (level * 0.1)
		end
	},

	["ConveyorSpeed"] = {
		Name = "Conveyor Speed",
		Description = "Increase the speed of all Conveyors by +1 per level",
		Icon = "ðŸ”„",
		BaseCost = 1,
		CostMultiplier = 1.5,
		MaxLevel = 20,
		SortOrder = 4,
