-- ReplicatedStorage/Modules/UpgradesData.lua
-- FIXED: ConveyorSpeed now uses +1 speed per level instead of percentage

local UpgradesData = {}

-- Define all available upgrades
UpgradesData.Upgrades = {
	["IronMineSpeed"] = {
		Name = "Iron Mine Speed",
		Description = "Increase the speed of all Iron Miners by 10% per level",
		Icon = "â›ï¸",
		BaseCost = 1,
		CostMultiplier = 1.5,
		MaxLevel = 20,
		SortOrder = 1,
		Category = "Mining",
		GetEffectText = function(level)
			if level == 0 then
				return "Not Upgraded"
			else
				return "+" .. (level * 10) .. "% Speed"
			end
		end,
		ApplyEffect = function(level)
			return 1 + (level * 0.1)
		end
	},

	["CopperMineSpeed"] = {
		Name = "Copper Mine Speed",
		Description = "Increase the speed of all Copper Miners by 10% per level",
		Icon = "ðŸ”¨",
		BaseCost = 1,
		CostMultiplier = 1.5,
		MaxLevel = 20,
		SortOrder = 2,
		Category = "Mining",
		GetEffectText = function(level)
			if level == 0 then
				return "Not Upgraded"
			else
				return "+" .. (level * 10) .. "% Speed"
			end
		end,
		ApplyEffect = function(level)
			return 1 + (level * 0.1)
		end
	},

	["GoldMineSpeed"] = {
		Name = "Gold Mine Speed",
		Description = "Increase the speed of all Gold Miners by 10% per level",
		Icon = "ðŸ’Ž",
		BaseCost = 1,
		CostMultiplier = 1.5,
		MaxLevel = 20,
		SortOrder = 3,
		Category = "Mining",
		GetEffectText = function(level)
			if level == 0 then
				return "Not Upgraded"
			else
				return "+" .. (level * 10) .. "% Speed"
